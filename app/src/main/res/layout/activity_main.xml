<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF8FF"
    tools:context=".titlePage">

    <com.example.projecthelloondo.OutlineTextView
        android:id="@+id/textView"
        android:layout_width="286dp"
        android:layout_height="105dp"
        android:layout_marginTop="152dp"
        android:fontFamily="@font/mrerg"
        android:gravity="center"
        android:shadowColor="#A4A4A4"
        android:shadowDx="7.0"
        android:shadowDy="7.0"
        android:shadowRadius="7.0"
        android:text="Hello"
        android:textColor="@color/white"
        android:textColorHighlight="@color/black"
        android:textSize="120dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.162"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textStroke="true"
        app:textStrokeColor="#BDBDBD"
        app:textStrokeWidth="5.0" />

    <com.example.projecthelloondo.OutlineTextView
        android:id="@+id/textView2"
        android:layout_width="249dp"
        android:layout_height="90dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/mrerg"
        android:gravity="center"
        android:shadowColor="#A4A4A4"
        android:shadowDx="7.0"
        android:shadowDy="7.0"
        android:shadowRadius="7.0"
        android:text="Ondo"
        android:textColor="@color/white"
        android:textColorHighlight="@color/black"
        android:textSize="110dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:textStroke="true"
        app:textStrokeColor="#BDBDBD"
        app:textStrokeWidth="5.0" />

    <ImageView
        android:id="@+id/join"
        android:layout_width="350dp"
        android:layout_height="53dp"
        android:layout_margin="20dp"
        android:src="@drawable/btn1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.802" />

    <ImageView
        android:id="@+id/login"
        android:layout_width="350dp"
        android:layout_height="53dp"
        android:layout_margin="20dp"
        android:src="@drawable/btn3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.69" />

    <ImageView
        android:id="@+id/logout"
        android:layout_width="350dp"
        android:layout_height="53dp"
        android:layout_margin="20dp"
        android:src="@drawable/btn2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.914" />

</androidx.constraintlayout.widget.ConstraintLayout>